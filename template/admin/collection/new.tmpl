{{ define "content" }}
  <h1>New Collection</h1>

  <form method="POST" action="/admin/collections">
		<div class="form-group">
			<label class="form-label" for="name">Name</label>
			<input class="form-input" type="text" id="name" name="name" placeholder="Name" />
		</div>

		<div class="form-group">
			<label class="form-label" for="slug">Slug</label>
			<input class="form-input" type="text" id="slug" name="slug" placeholder="Slug" />
		</div>

    <button class="btn btn-primary input-group-btn">Submit</button>

  </form>
{{ end }}
